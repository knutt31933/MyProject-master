<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgfacebook"
    android:weightSum="1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ตั้งค่าไทม์ไลน์ (Timeline)"
        android:textStyle="bold"
        android:textColor="#FFFF"
        android:textSize="17dp"
        android:layout_weight="0.11"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.05"
        android:text="คุณต้องการเห็นโพสต์ที่แสดงทัศนคติใดแสดงบนไทม์ไลน์บ้าง?"
        android:textColor="#000000"
        android:textSize="16dp"/>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="match_parent"
        android:onClick="onCheckboxClicked"
        android:layout_height="wrap_content"
        android:text="ทัศนคติทางบวก"
        android:textSize="16dp"/>

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:onClick="onCheckboxClicked"
        android:layout_weight="0.03"
        android:text="ทัศนคติเป็นกลาง"
        android:textSize="16dp"/>

    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="match_parent"
        android:onClick="onCheckboxClicked"
        android:layout_height="28dp"
        android:text="ทัศนคติเป็นลบ"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="0.15" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:layout_weight="0.07"
        android:text="ตั้งค่าการแจ้งเตือน (Notification)"
        android:textColor="#FFFF"
        android:textSize="17dp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/checkBox4"
        android:layout_width="283dp"
        android:layout_height="wrap_content"
        android:onClick="onCheckboxClicked"
        android:layout_weight="0.08"
        android:text="เมื่อโพสต์สถานะที่แสดงทัศนคติทางลบบ่อยครั้ง"
        android:textSize="16dp"/>

    <CheckBox
        android:id="@+id/checkBox5"
        android:layout_width="336dp"
        android:layout_height="43dp"
        android:onClick="onCheckboxClicked"
        android:text="เมื่อเพื่อนสนิท (Close Friends) โพสต์สถานะ"
        android:textSize="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_weight="0.11" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.07"
        android:text="ตั้งค่าการโพสต์ (Post via Application)"
        android:textColor="#FFFF"
        android:textSize="17dp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/checkBox6"
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:onClick="onCheckboxClicked"
        android:text="โพสต์ไปยังไทม์ไลน์ทันทีเมื่อโพสต์สถานะที่แสดงทัศนคติทางบวก"
        android:textSize="16dp"/>


</LinearLayout>
